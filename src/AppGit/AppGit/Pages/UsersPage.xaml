<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGit.Pages.UsersPage"
             Title="UsersPage">
    <ScrollView>
        <StackLayout Padding="10" Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Entry HorizontalOptions="FillAndExpand"/>
                <Button Text="Search" HorizontalOptions="End"/>
            </StackLayout>

            <ListView x:Name="ListViewRepositories">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="TO DO: bind avatarUrl" Text="TO DO: bind login" Detail="TO DO: bind name"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ScrollView>
</ContentPage>